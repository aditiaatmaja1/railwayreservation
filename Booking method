                    age[j]=sc.nextInt();
                    sc.nextLine();
                }
                catch(InputMismatchException obj)
                {
                    System.out.println("Please Enter Correct Age");
                    sc.nextLine();
                    continue;
                }
                catch(Exception obj)
                {
                    System.out.println("Please Enter Correct Age");
                    sc.nextLine();
                    continue;   
                } 
                if(age[j]>100)
                {
                    System.out.println("Please Enter a Valid Age");
                    continue;
                }
